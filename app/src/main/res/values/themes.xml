<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="textColorPrimary">@color/black</item>
        <item name="textColorTitle">@color/blue</item>
        <item name="textColorSubtitle">@color/dark_blue</item>
        <item name="errorColor">@color/red</item>

        <item name="textColorOnContrast">@color/white</item>

        <item name="colorTabSelected">@color/orange</item>
        <item name="colorTabUnselected">@color/light_orange</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:navigationBarColor">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>