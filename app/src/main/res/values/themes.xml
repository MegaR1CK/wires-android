<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/primary_black</item>
        <item name="colorControlHighlight">@color/semi_gray</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="textColorPrimary">@color/primary_black</item>
        <item name="textColorSecondary">@color/darkest_gray</item>
        <item name="textColorTitle">@color/blue</item>
        <item name="textColorSubtitle">@color/dark_blue</item>
        <item name="errorColor">@color/red</item>
        <item name="textColorAccent">@color/red</item>

        <item name="textColorOnContrast">@color/white</item>
        <item name="iconColorOnContrast">@color/white</item>

        <item name="colorTabSelected">@color/orange</item>
        <item name="colorTabUnselected">@color/light_orange</item>

        <item name="dividerColor">@color/semi_gray</item>
        <item name="colorToolbarIcons">@color/primary_black</item>

        <item name="colorImagePlaceholder">@color/semi_gray</item>

        <item name="colorRippleDark">@color/gray</item>

        <item name="colorAvatarDarken">@color/black_60</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:navigationBarColor">@color/primary_black</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>