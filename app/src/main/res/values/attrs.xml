<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StatefulMaterialButton">
        <attr name="progressColor" format="color" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MessageInputView">
        <attr name="inputHint" format="string" />
    </declare-styleable>

    <declare-styleable name="ValidationTextInput">
        <attr name="fieldHint" format="string" />
        <attr name="lengthErrorText" format="string" />
        <attr name="patternErrorText" format="string" />
        <attr name="additionalValidationErrorText" format="string" />
        <attr name="validationPattern" format="string" />
        <attr name="minTextLength" format="integer" />
        <attr name="maxTextLength" format="integer" />
        <attr name="canBeEmpty" format="boolean" />
        <attr name="fieldStartIcon" format="reference" />
        <attr name="fieldPasswordToggleEnabled" format="boolean" />
        <attr name="fieldImeOptions" format="enum">
            <enum name="actionNext" value="0" />
            <enum name="actionDone" value="1" />
        </attr>
        <attr name="fieldInputType" format="enum">
            <enum name="text" value="0" />
            <enum name="email" value="1" />
            <enum name="textPassword" value="2"/>
        </attr>
    </declare-styleable>

    <attr name="colorPrimaryDark" format="reference|color" />
    <attr name="colorPrimaryBackground" format="reference|color" />

    <attr name="textColorPrimary" format="reference|color" />
    <attr name="textColorSecondary" format="reference|color" />
    <attr name="textColorAccent" format="reference|color" />
    <attr name="textColorOnContrast" format="reference|color" />
    <attr name="errorColor" format="reference|color" />

    <attr name="iconColorPrimary" format="reference|color" />
    <attr name="iconColorSecondary" format="reference|color" />
    <attr name="iconColorOnContrast" format="reference|color" />

    <attr name="colorSurfaceChat" format="reference|color" />
    <attr name="colorInputBackground" format="reference|color" />
    <attr name="colorInputHint" format="reference|color" />

    <attr name="colorTabSelected" format="reference|color" />
    <attr name="colorTabUnselected" format="reference|color" />

    <attr name="dividerColor" format="reference|color" />

    <attr name="colorImagePlaceholder" format="reference|color" />
    <attr name="colorRippleDark" format="reference|color" />
    <attr name="colorAvatarDarken" format="reference|color" />

    <!-- REMOVE BOTTOM WHEN REDESIGN FINISHED -->
    <attr name="colorToolbarIcons" format="reference|color" />
    <attr name="textColorSubtitle" format="reference|color" />
</resources>